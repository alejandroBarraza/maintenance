@page
@model NuevaMantencionModel
@using mantencion.Data

<div class = "text-center">
    <h1 class="display-4">Nueva Mantenciones</h1>    
</div>

<div class="card">
    <div class="card-body">
        <form asp-page="NuevaMantencion" method="POST">
    
            <div class="form-group">

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Fecha</label>
                    <input type="date" name="fecha">
                </div>
                
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Seleccione el o los mecanicos que haran la mantencion:</label>
                    @foreach (Mecanico mecanico in Model.Mecanicos){
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" value="@mecanico.id" id="flexCheckChecked" name="id_mecanico">
                            <label class="form-check-label" for="flexCheckChecked"> @mecanico.nombre @mecanico.apellido </label>
                        </div>
                    }
                </div>


            </div>

            <button type="submit"class="btn btn-primary">Guardar</button>

        </form>
    </div>
    
</div>
